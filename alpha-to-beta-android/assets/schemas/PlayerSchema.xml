<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<!-- definition of simple elements -->
<xs:element name="mass" />
<xs:element name="jump_speed" />
<xs:element name="move_speed" />

<xs:element name="regionName" type="xs:string" />

<!-- definition of attributes -->
<xs:attribute name="interval" type="xs:float" />
<xs:attribute name="looping" type="xs:boolean" />

<xs:attribute name="atlas" type="xs:string" />
<xs:attribute name="width" type="xs:float" />
<xs:attribute name="height" type="xs:float" />

<xs:attribute name="x" type="xs:float" />
<xs:attribute name="y" type="xs:float" />

    
<!-- Definition of complex elements -->
    <!-- Animation Directions-->
    <!-- TODO: Use Run, Jump and Fall -->
    <xs:element name="left">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="regionName" maxOccurs="unbounded" />
            </xs:sequence>
            <xs:attribute ref="interval" use="required" />
            <xs:attribute ref="looping" use="required" />
        </xs:complexType>
    </xs:element>

    <xs:element name="right">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="regionName" maxOccurs="unbounded" />
            </xs:sequence>
            <xs:attribute ref="interval" use="required" />
            <xs:attribute ref="looping" use="required" />
        </xs:complexType>
    </xs:element>

    <xs:element name="idle">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="regionName" maxOccurs="unbounded" />
            </xs:sequence>
            <xs:attribute ref="interval" use="required" />
            <xs:attribute ref="looping" use="required" />
        </xs:complexType>
    </xs:element>

<xs:element name="Animation">
    <xs:complexType>
        <xs:sequence>
            <xs:element ref="left" maxOccurs="unbounded" />
            <xs:element ref="right" maxOccurs="unbounded" />
            <xs:element ref="idle" maxOccurs="unbounded" />
        </xs:sequence>
    </xs:complexType>
</xs:element>
<xs:element name="Texture">
    <xs:complexType>
        <xs:attribute ref="atlas" />
        <xs:attribute ref="width" use="required" />
        <xs:attribute ref="height" use="required" />
    </xs:complexType>
</xs:element>


<xs:element name="max_velocity">
    <xs:complexType>
        <xs:attribute ref="x" use="required" />
        <xs:attribute ref="y" use="required" />
    </xs:complexType>
</xs:element>

<xs:element name="Physics">
    <xs:complexType>
        <xs:sequence>
            <xs:element ref="mass" />
            <xs:element ref="jump_speed" />
            <xs:element ref="move_speed" />
            <xs:element ref="max_velocity" />
        </xs:sequence>
    </xs:complexType>
</xs:element>

<xs:element name="Player">
    <xs:complexType>
        <xs:sequence>
            <xs:element ref="Animation" />
            <xs:element ref="Texture" />
            <xs:element ref="Physics" />
        </xs:sequence>
    </xs:complexType>
</xs:element>

</xs:schema>